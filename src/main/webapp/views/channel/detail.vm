<style>
.upd-a{display:none;cursor:pointer}
.nav-tabs li a{padding-left:15px}
</style>
<div class="row margin-bottom-20">
	<div class="col-xs-12">
		<h1>$!channel.chnlName</h1>
		<br>
		<ul id="myTab" class="nav nav-tabs">
			<li><a href="${rc.contextPath}/channel/overall">交易统计信息</a></li>
		    <li class="active"><a href="${rc.contextPath}/channel/channelDetail">基本信息</a></li>
		</ul>
	</div>
</div>
<div class="row">
	<div class="col-xs-6">
		<div class="detail-module authweb-shadow">
			<h4>基本信息<span class="span-in-h"><a class="upd-a" href="javascript:updBaseInfo(this);">修改</a></span></h4>
			<hr>
			<div id="baseInfoDiv">
				<ul>
					<li><span>渠道ID：</span><span>$!channel.chnlId</span></li>
					<li><span>联系方式：</span><span>$!channel.phone</span></li>
					<li><span>地址：</span><span>$!channel.addr</span></li>
					<li>
						<span>审核状态：</span>#if($!channel.reviewSt=="0")<span style="color:blue">待审核</span>
						#elseif($!channel.reviewSt=="1")<span style="color:green">通过</span>
						#else<span style="color:#FB9100">拒绝</span>
						#end
					</li>
					<li>
						<span>生效状态：</span>#if($!channel.validSt=="1")<span style="color:green">已生效</span>
						#else<span style="color:#FB9100">未生效</span>
						#end
					</li>
					<li><span>MD5-KEY：</span><span>$!channel.md5Key</span></li>
					<li><span>Base-3DES：</span><span>$!channel.base3des</span></li>
					<li><span>注册时间：</span><span>$!channel.regTimeStr</span></li>
				</ul>
			</div>
			<div id="updBaseInfoDiv" style="display:none">
				#parse("/channel/updBaseInfo.vm")
			</div>
		</div>
	</div>
	<div class="col-xs-6">
		<div class="detail-module authweb-shadow">
			<h4>配置信息<span class="span-in-h"><a class="upd-a" href="javascript:updSettingInfo(this);">修改</a></span></h4>
			<hr>
			<div id="settingInfoDiv">
				<ul>
					<li><span>每日额度上限：</span><span>#if(($!channel.isLimit=="1"||$!channel.isLimit=="2")&&$!channel.dayAtLimitTop)$!channel.dayAtLimitTop元 #else 无限制 #end</span></li>
					<li><span>每日笔数上限：</span><span>#if(($!channel.isLimit=="1"||$!channel.isLimit=="3")&&$!channel.dayTransLimitTop)$!channel.dayTransLimitTop笔 #else 无限制 #end</span></li>
					<li><span>自定义额度上限：</span><span>#if($!channel.dayAtLimit!=""&&$!channel.dayAtLimit)$!channel.dayAtLimit元 #else 无限制 #end</span></li>
					<li><span>自定义笔数上限：</span><span>#if($!channel.dayTransLimit!=""&&$!channel.dayTransLimit)$!channel.dayTransLimit笔 #else 无限制 #end</span></li>
					<li><span>卡查询次数上限：</span><span>#if("$!channel.cardTransLimit"!=""&&"$!channel.cardTransLimit" != "-1")$!channel.cardTransLimit次 #else 无限制 #end</span></li>
				</ul>
			</div>
			<div id="updSettingInfoDiv" style="display:none">
				#parse("/channel/updSettingInfo.vm")
			</div>
		</div>
		<div class="col-xs-12 detail-module authweb-shadow">
			<h4>费用信息</h4>
			<hr>
			<ul>
				<li><span style="width:40%">卡号+姓名：</span><span style="width:60%">$!channel.userPriceVo.mode1Price元/笔</span></li>
				<li><span style="width:40%">卡号+身份证号：</span><span style="width:60%">$!channel.userPriceVo.mode2Price元/笔</span></li>
				<li><span style="width:40%">卡号+姓名+身份证号：</span><span style="width:60%">$!channel.userPriceVo.mode3Price元/笔</span></li>
				<li><span style="width:40%">卡号+姓名+身份证号+手机：</span><span style="width:60%">$!channel.userPriceVo.mode4Price元/笔</span></li>
				<li><span style="width:40%">姓名+身份证号：</span><span style="width:60%">$!channel.userPriceVo.mode5Price元/笔</span></li>
			</ul>
		</div>
	</div>
</div>


<script src="${rc.contextPath}/resources/js/Chart.min.js" type="text/javascript"></script>
<script>

function updBaseInfo(document){
	$('#baseInfoDiv').toggle(500);
	$('#updBaseInfoDiv').toggle(500,function(){
		if("block"==$(this).css('display'))
			$(document).html('取消');
		else
			$(document).html('修改');
	});
}
function updSettingInfo(document){
	$('#settingInfoDiv').toggle(500);
	$('#updSettingInfoDiv').toggle(500,function(){
		if("block"==$(this).css('display'))
			$(document).html('取消');
		else
			$(document).html('修改');
	});
}
$('.authweb-shadow').mouseover(function(){
	$(this).find('.upd-a').css("display","inline-block");
});
$('.authweb-shadow').mouseout(function(){
	$(this).find('.upd-a').css("display","none");
});
</script>