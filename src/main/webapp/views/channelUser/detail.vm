<style>
.upd-a{display:none;cursor:pointer}
.nav-tabs li a{padding-left:15px}
</style>
#set($rootFlag=("$chnlSysUser.userId"=="$chnlSysUser.chnlId")
		||($!chnlSysUser.userType!="3"&&$!channelUser.userType=="3"))
<div class="row margin-bottom-20">
	#if($chnlSysUser.userType!="3")
	<div class="col-xs-12">
		<p>当前位置：<a href="${rc.contextPath}/chnlUser/userList">渠道用户管理</a> >> 用户基本信息</p>
		<hr>
	</div>
	#end
	<div class="col-xs-12">
		<h1>$!channelUser.trueName</h1>
		<br>
		<ul id="myTab" class="nav nav-tabs">
			#if($channelUser.userType!="2")
			<li><a href="${rc.contextPath}/chnlUser/userStatistic?id=$!channelUser.id">交易统计信息</a></li>
			#end
			#if($chnlSysUser.userType=="3")
			<li class="active"><a href="${rc.contextPath}/chnlUser/myDetail">基本信息</a></li>
			#else
		    <li class="active"><a href="${rc.contextPath}/chnlUser/userDetail?id=$!channelUser.id">基本信息</a></li>
		    #end
		</ul>
	</div>
</div>
<div class="row">
	<div class="col-xs-6">
		<div class="col-xs-12 detail-module authweb-shadow">
			<h4>基本信息#if($rootFlag)<span class="span-in-h"><a class="upd-a" onclick="updBaseInfo(this);">修改</a>#end</span></h4>
			<hr>
			<div id="baseInfoDiv">
				<ul>
					<li><span>用户ID：</span><span>$!channelUser.userId</span></li>
					<li>
						<span>用户权限：</span>#if($!channelUser.userType=="1")<span style="color:green">所有权限</span>
						#elseif($!channelUser.userType=="2")<span style="color:blue">管理权限</span>
						#else<span style="color:#FB9100">交易权限</span>
						#end
					</li>
					<li><span>所在公司：</span><span>$!channelUser.corp</span></li>
					<li><span>所属渠道ID：</span><span>$!channelUser.chnlId</span></li>
					<li><span>联系方式：</span><span>$!channelUser.phone</span></li>
					<li>
						<span>生效状态：</span>#if($!channelUser.validSt=="1")<span style="color:green">已生效</span>
						#else<span style="color:red">未生效</span>
						#end
					</li>
					<li><span>创建人ID：</span><span>$!channelUser.crtUserId</span></li>
					<li><span>注册时间：</span><span>$!channelUser.recCrtTsStr</span></li>
				</ul>
			</div>
			<div id="updBaseInfoDiv" style="display:none">
				#parse("/channelUser/updBaseInfo.vm")
			</div>
		</div>
	</div>
	<div class="col-xs-6">
		<div class="col-xs-12 detail-module authweb-shadow">
			<h4>交易配置信息#if($!chnlSysUser.userType!="3"&&$!channelUser.userType!="2"&&"$channelUser.userId"!="$channelUser.chnlId")<span class="span-in-h"><a class="upd-a" onclick="updSettingInfo(this)">修改</a></span>#end</h4>
			<hr>
			<div id="settingInfoDiv">
				#if($!channelUser.userType=="1"||$!channelUser.userType=="3")
				<ul>
					<li><span>每日额度上限：</span><span>#if($!channelUser.isLimit=="1"||$!channelUser.isLimit=="2")$!channelUser.dayAtLimit元 #else 无限制 #end</span></li>
					<li><span>每日笔数上限：</span><span>#if($!channelUser.isLimit=="1"||$!channelUser.isLimit=="3")$!channelUser.dayTransLimit笔 #else 无限制 #end</span></li>
					<li><span>交易访问权限：</span>#if($!channelUser.entry=="1")<span style="color:green">所有权限</span>
					#elseif($!channelUser.entry=="2")<span style="color:blue">接口访问权限</span>
					#elseif($!channelUser.entry=="3")<span style="color:blue">前台界面访问权限</span>
					#else<span style="color:red">无权限</span>
					#end
					</li>
				</ul>
				#else
				<p>该用户为管理权限，无交易配置信息</p>
				#end
			</div>
			<div id="updSettingInfoDiv" style="display:none">
				#parse("/channelUser/updSettingInfo.vm")
			</div>
		</div>
		<div class="col-xs-12 detail-module authweb-shadow">
			<h4>费用信息</h4>
			<hr>
			<div id="priceInfoDiv">
				#if($!chnlSysUser.userType!="3"&&$!channelUser.userType!="2"&&"$channelUser.userId"!="$channelUser.chnlId")
				<ul>
					<li><span style="width:40%">卡号+姓名：</span><span style="width:60%">$!tradeType0405.price元/笔</span>
     					<a href="${rc.contextPath}/chnlUser/updChnlUserPriceInfo?chnlUserIndexId=$!channelUser.id&&userPriceId=$!tradeType0405.id">修改</a>
					</li>
					<li><span style="width:40%">卡号+身份证号：</span><span id="aa" style="width:60%">$!tradeType0407.price元/笔</span>
     					<a href="${rc.contextPath}/chnlUser/updChnlUserPriceInfo?chnlUserIndexId=$!channelUser.id&&userPriceId=$!tradeType0407.id">修改</a>
					</li>
					<li><span style="width:40%">卡号+姓名+身份证号：</span><span style="width:60%">$!tradeType0409.price元/笔</span>
     					<a href="${rc.contextPath}/chnlUser/updChnlUserPriceInfo?chnlUserIndexId=$!channelUser.id&&userPriceId=$!tradeType0409.id">修改</a>
					</li>
					<li><span style="width:40%">卡号+姓名+身份证号+手机：</span><span style="width:60%">$!tradeType0411.price元/笔</span>
     					<a href="${rc.contextPath}/chnlUser/updChnlUserPriceInfo?chnlUserIndexId=$!channelUser.id&&userPriceId=$!tradeType0411.id">修改</a>
					</li>
					<li><span style="width:40%">姓名+身份证号：</span><span style="width:60%">$!tradeType0417.price元/笔</span>
     					<a href="${rc.contextPath}/chnlUser/updChnlUserPriceInfo?chnlUserIndexId=$!channelUser.id&&userPriceId=$!tradeType0417.id">修改</a>
					</li>
				</ul>
				#elseif($!channelUser.userType=="1"||$!channelUser.userType=="3")
				<ul>
					<li><span style="width:40%">卡号+姓名：</span><span style="width:60%">$!tradeType0405.price元/笔</span></li>
					<li><span style="width:40%">卡号+身份证号：</span><span id="aa" style="width:60%">$!tradeType0407.price元/笔</span></li>
					<li><span style="width:40%">卡号+姓名+身份证号：</span><span style="width:60%">$!tradeType0409.price元/笔</span></li>
					<li><span style="width:40%">卡号+姓名+身份证号+手机：</span><span style="width:60%">$!tradeType0411.price元/笔</span></li>
					<li><span style="width:40%">姓名+身份证号：</span><span style="width:60%">$!tradeType0417.price元/笔</span>	</li>
				</ul>
				#else
				<p>该用户为管理权限，无今日余额信息</p>
				#end
			</div>
			<div id="updPriceInfoDiv" style="display:none">
				#parse("/channelUser/updPriceInfo.vm")
			</div>
		</div>
	</div>
</div>


<script src="${rc.contextPath}/resources/js/Chart.min.js" type="text/javascript"></script>
<script>
function updBaseInfo(document){
	$('#baseInfoDiv').toggle(500);
	$('#updBaseInfoDiv').toggle(500,function(){
		if("block"==$(this).css('display'))
			$(document).html('取消');
		else
			$(document).html('修改');
	});
}
function updSettingInfo(document){
	$('#settingInfoDiv').toggle(500);
	$('#updSettingInfoDiv').toggle(500,function(){
		if("block"==$(this).css('display'))
			$(document).html('取消');
		else
			$(document).html('修改');
	});
}
function updPriceInfo(document){
	$('#priceInfoDiv').toggle(500);
	$('#updPriceInfoDiv').toggle(500,function(){
		if("block"==$(this).css('display'))
			$(document).html('取消');
		else
			$(document).html('修改');
	});
}

$('.authweb-shadow').mouseover(function(){
	$(this).find('.upd-a').css("display","inline-block");
});
$('.authweb-shadow').mouseout(function(){
	$(this).find('.upd-a').css("display","none");
});
</script>