#set($layout="/layout/defaultNone.vm")
<!DOCTYPE html>
<html lang="en">
  <head>
  	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<meta name="renderer" content="webkit" />
	<meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" >
	<meta name="format-detection" content="telephone=no" />
	<link rel="stylesheet" href="${rc.contextPath}/resources/css/bootstrap.css"/>
	<link href="${rc.contextPath}/resources/css/font-awesome.css" rel="stylesheet"/>
	<link href="${rc.contextPath}/resources/css/adminView.css" rel="stylesheet"/>
	<script src="${rc.contextPath}/resources/js/jquery.min.js" type="text/javascript"></script>
    <title>实名认证渠道管理系统</title>
  </head>

  <style>
  body{min-width:1270px;min-height:600px;background:url('${rc.contextPath}/resources/img/Background.jpg') top center no-repeat;background-size: 1370px 660px}
  </style>
  <body>
	  <div class="container">
		  <div class="row">
	          <div class="login-panel panel panel-default" style="margin:auto;margin-top:166px;width:360px;height:276px">
	              <div class="panel-heading">
	                  <h4><span class="icon-signin"></span> 登录</h4>
	              </div>
	              <div class="panel-body">
	                  <form class="form-horizontal" action="${rc.contextPath}/chnlsys/login" method="post">
                          <div class="form-group">
                              <div class="col-xs-3 label-div"><label class="control-label">用户名</label></div>
                              <div class="col-xs-9"><input class="form-control" maxlength=12 type="text" name="userId" id="userId" autofocus></div>
                              <label class="control-label" id="userNameTip"></label>
                          </div>
                          <div class="form-group">
                              <div class="col-xs-3 label-div"><label class="control-label">密码</label></div>
                              <div class="col-xs-9">
                              	<input class="form-control" type="password" name="password" id="password">
                              	<div class="row" style="margin-top:7px">
                              		<a href="javascript:forgetPwdTip()">忘记密码？</a>
                              		<span style="text-align:center;color:red">$!errMsg</span>
                              	</div>
                              </div>
                          </div>
                          <button type="submit" onclick="return checkSubmit();" class="btn btn-lg btn-primary btn-block">登录</button>
	                  </form>
	              </div>
	          </div>
		  </div>
		</div>
		<!-- confirm Modal-->
		<div style="clear:both;"></div>
		<div id="myModal" class="modal fade">
		  <div class="modal-dialog">
		    <div class="modal-content" style="*width:600px;*margin:30px auto;">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		        <h4 class="modal-title">提示</h4>
		      </div>
		      <div class="modal-body">
		      	请联系管理员重置密码
		      </div>
		      <div class="modal-footer">
		      	<button type="button" class="confirm-no btn btn-primary" data-dismiss="modal">确定</button>
		      </div>
		    </div>
		  </div>
		</div>
		<!-- confirm Modal-->
		<script src="${rc.contextPath}/resources/js/md5.js" type="text/javascript"></script>
		<script>
		function checkSubmit(){
			var userName = $('#userId').val();
			var password = $('#password').val();
			if(""==userName||""==password){
				alert("请输入用户名和密码");
				return false;
			}
			$('#password').val($.md5(password));
			return true;
		}
		function forgetPwdTip(){
			$('.modal').modal('show').on('shown');
		}
		</script>
	</body>
<script src="${rc.contextPath}/resources/js/bootstrap.min.js" type="text/javascript"></script>
</html>


