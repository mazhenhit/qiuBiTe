<style>
.mode-title{color:#999}
</style>
<div class="row">
	<div class="col-xs-12">
		<p>当前位置：认证历史查询</p>
		<hr>
	</div>
	<div class="col-xs-12" >
		<form class="form-horizontal" action="${rc.contextPath}/transDetailQuery/transDetailList" method="post">
			<div class="col-xs-1" style="font-size:20px;width:12%">
				查询条件
			</div>
			<div class="col-xs-10">
				<div class="form-group">
					<label class="col-xs-2 control-label">订单号</label>
				    <div class="col-xs-3">
				    	<input class="form-control" name="orderId" value="$!orderId">
				    </div>
				    #if($!chnlSysUser.userType!="3")
				    <label class="col-xs-2 control-label">用户名</label>
				    <div class="col-xs-3">
				    	<input class="form-control" name="userId" value="$!userId">
				    </div>
				    #end
			    </div>
			    <div class="form-group">
				    <label class="col-xs-2 control-label">开始时间</label>
				    <div class="col-xs-3">
				    	<input class="form-control tmSelect" type="text" name="startTime" value="$!startTime" readonly>
				    </div>
				    <label class="col-xs-2 control-label">结束时间</label>
				    <div class="col-xs-3">
				    	<input class="form-control tmSelect" type="text" name="endTime" value="$!endTime" readonly>
				    </div>
			    </div>
		    </div>
		    <div class="col-xs-10">
		    	<button type="submit" class="btn btn-primary" style="float:right;margin-right:20px;">查询</button>
		    	<button type="button" class="btn btn-success" onclick="resetInput()" style="float:right;margin-right:20px;">重置</button>
		    </div>
		</form>
	</div>
</div>
<div class="row admin-row-margin">
	<hr>
	<div class="col-xs-12">
		<div class="row">
			<div style="font-size:26px;float:left">查询结果<span style="font-size:14px">···(共$!page.total条数据)</span></div>
		#if($!authLogList.size()>0)
	    	<button type="button" class="btn btn-success" onclick="exportFile()" style="float:right;margin-right:20px;">导出</button>
	    #end
	    </div>
		<table class="table table-striped table-bordered table-hover">
			<thead style="background-color:#0099CC;">
				<th>订单号</th>
				<th>认证内容</th>
				<th style="width:20%">认证结果</th>
				<th>认证花费(元)</th>
				<th>用户名</th>
				<th>查询时间</th>
			</thead>
			<tbody>
				#if($!authLogList.size()==0)
					<tr><td colspan=6 style="text-align:center">查无数据，请确认查询条件</td></tr>
				#end
				#foreach($authLog in $!authLogList)
				<tr>
					<td>$!authLog.orderId</td>
					<td>#if($!authLog.accNo)<span class="mode-title">卡号：</span>$!authLog.accNo<br>#end
					#if($!authLog.name)<span class="mode-title">姓名：</span>$!authLog.name <br> #end
					#if($!authLog.certificateCode)<span class="mode-title">身份证号：</span>$!authLog.certificateCode <br>#end
					#if($!authLog.nbr)<span class="mode-title">手机号：</span>$!authLog.nbr #end
					</td>
					<td>$!authLog.resultDesc</td>
					<td>#if("$!authLog.userAt"!="")$!authLog.userAt #else 0.00 #end</td>
					<td>$!authLog.userId</td>
					<td>$!authLog.recCrtTsStr</td>
				</tr>
				#end
			</tbody>
		</table>
		<!-- 分页-->
		#if($!page.total > $!page.pageSize)
			<div class="row ">
				<div style="float:right">
				<ul class="pagination">
					<li><a href="${rc.contextPath}/transDetailQuery/transDetailList?limit=1&orderId=$!orderId&userId=$!userId&startTime=$!startTime&endTime=$!endTime">首页</a></li>
	              #if($!page.currNo!=1)
	                  <li class="previous"><a  href="${rc.contextPath}/transDetailQuery/transDetailList?limit=$!page.lastNo&orderId=$!orderId&userId=$!userId&startTime=$!startTime&endTime=$!endTime" >上一页</a><li>
	              #end
	            #set($no=[$!page.beginPgNo .. $!page.nextEndPgNo])
	            #foreach($i in $no) 
	                <li #if(($!page.currNo)==$i) class="active" #else class="disable" #end><a href="${rc.contextPath}/transDetailQuery/transDetailList?limit=$i&orderId=$!orderId&userId=$!userId&startTime=$!startTime&endTime=$!endTime" >$i</a></li>
	            #end
	             #if($!page.currNo!=$!page.endPgNo)
	                <li class="next"><a href="${rc.contextPath}/transDetailQuery/transDetailList?limit=$!page.nextNo&orderId=$!orderId&userId=$!userId&startTime=$!startTime&endTime=$!endTime" >下一页</a></li>
	             #end
	             	<li><a href="${rc.contextPath}/transDetailQuery/transDetailList?limit=$page.endPgNo&orderId=$!orderId&userId=$!userId&startTime=$!startTime&endTime=$!endTime" class="home">尾页</a></li>
	             	<li><a >共$!page.pageNo页</a></li>
	            </ul>
	            </div>
	        </div>
		#end
		<!--分页 End -->
	</div>
</div>

<script src="${rc.contextPath}/resources/js/bootstrap-datetimepicker.js" type="text/javascript"></script>
<script src="${rc.contextPath}/resources/js/bootstrap-datetimepicker.zh-CN.js" type="text/javascript"></script>
<script>
function resetInput(){
	$('input').val('');
	$('select option[value=""]').attr('selected','selected');
}
function exportFile(){
	window.location.href='${rc.contextPath}/transDetailQuery/export?&orderId=$!orderId&userId=$!userId&startTime=$!startTime&endTime=$!endTime';
}
$('.tmSelect').datetimepicker({
	minView:"month",
	format:"yyyy-mm-dd",
	language:'zh-CN',
	endDate:new Date(),
	autoclose:true
});
</script>