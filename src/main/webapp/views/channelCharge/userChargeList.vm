<style>
.search-btn{float:right;margin-right:20px;height:132px}
</style>
<div class="row">
	<div class="col-xs-12">
		<p>当前位置：增值查询 >> 用户增值记录</p>
		<hr>
	</div>
	<div class="col-xs-12" >
		<form class="row form-horizontal" action="${rc.contextPath}/chnlCharge/userChargeList">
			<div class="col-xs-2" style="font-size:20px;width:12%">
				增值查询
			</div>
			<div class="col-xs-10" style="width:70%;padding-left:0;padding-right:0">
				<div class="form-group">
					<label class="col-xs-2 control-label">订单号</label>
				    <div class="col-xs-3"><input class="form-control" type="text" name="orderId" value="$!orderId"></div>
				    <label class="col-xs-2 control-label">用户名</label>
				    <div class="col-xs-3"><input class="form-control" type="text" name="userId" value="$!userId"></div>
			    </div>
			    <div class="form-group">
				    <label class="col-xs-2 control-label">开始时间</label>
				    <div class="col-xs-3">
				    	<input class="form-control tmSelect" type="text" name="startTime" value="$!startTime" readonly>
				    </div>
				    <label class="col-xs-2 control-label">结束时间</label>
				    <div class="col-xs-3">
				    	<input class="form-control tmSelect" type="text" name="endTime" value="$!endTime" readonly>
				    </div>
			    </div>
		    </div>
		    <div class="col-xs-1">
		    	<button type="submit" class="btn btn-primary search-btn" style="height:83px;">查询</button>
		    </div>
		    <div class="col-xs-1">
		    	<button type="button" class="btn btn-success search-btn" onclick="javascript:resetInput()" style="height:83px;">重置</button>
		    </div>
		</form>
	</div>
</div>
<div class="row admin-row-margin">
	<hr>
	<div class="row">
		<div class="col-xs-6" style="font-size:18px">查询结果<span style="font-size:14px">···(共$!page.total条数据)</span></div>
	</div>
	<div class="col-xs-12">
		<table class="table table-striped table-bordered table-hover">
			<thead style="background-color:#FB9100">
				<th>订单号</th>
				<th>用户ID</th>
				<th>增值金额(元)</th>
				<th>增值时间</th>
			</thead>
			<tbody>
				#if($!chargeLogList.size()==0)
					<tr><td colspan=4 style="text-align:center">查无数据，请确认查询条件</td></tr>
				#end
				#foreach($chargeLog in $!chargeLogList)
				<tr>
					<td>$!chargeLog.orderId</td>
					<td>$!chargeLog.userId</td>
					<td>$!chargeLog.orderAt</td>
					<td>$!chargeLog.txtTimeStr</td>
				</tr>
				#end
			</tbody>
		</table>
		<!-- 分页-->
		#if($!page.total > $!page.pageSize)
			<div class="row ">
				<div style="float:right">
				<ul class="pagination">
					<li><a href="${rc.contextPath}/chnlCharge/userChargeList?limit=1&orderId=$!orderId&userId=$!userId&startTime=$!startTime&endTime=$!endTime">首页</a></li>
	              #if($!page.currNo!=1)
	                  <li class="previous"><a  href="${rc.contextPath}/chnlCharge/userChargeList?limit=$!page.lastNo&orderId=$!orderId&userId=$!userId&startTime=$!startTime&endTime=$!endTime" >上一页</a><li>
	              #end
	            #set($no=[$!page.beginPgNo .. $!page.nextEndPgNo])
	            #foreach($i in $no) 
	                <li #if(($!page.currNo)==$i) class="active" #else class="disable" #end><a href="${rc.contextPath}/chnlCharge/userChargeList?limit=$i&orderId=$!orderId&userId=$!userId&startTime=$!startTime&endTime=$!endTime" >$i</a></li>
	            #end
	             #if($!page.currNo!=$!page.endPgNo)
	                <li class="next"><a href="${rc.contextPath}/chnlCharge/userChargeList?limit=$!page.nextNo&orderId=$!orderId&userId=$!userId&startTime=$!startTime&endTime=$!endTime" >下一页</a></li>
	             #end
	             	<li><a href="${rc.contextPath}/chnlCharge/userChargeList?limit=$page.endPgNo&orderId=$!orderId&userId=$!userId&startTime=$!startTime&endTime=$!endTime" class="home">尾页</a></li>
	             	<li><a >共$!page.pageNo页</a></li>
	            </ul>
	            </div>
	        </div>
		#end
		<!--分页 End -->
	</div>
</div>

<script src="${rc.contextPath}/resources/js/bootstrap-datetimepicker.js" type="text/javascript"></script>
<script src="${rc.contextPath}/resources/js/bootstrap-datetimepicker.zh-CN.js" type="text/javascript"></script>
<script>
$('.tmSelect').datetimepicker({
	minView:"month",
	format:"yyyy-mm-dd",
	language:'zh-CN',
	endDate:new Date(),
	autoclose:true
});

function resetInput(){
	$('input').val('');
	$('select option[value=""]').attr('selected','selected');
}
</script>
