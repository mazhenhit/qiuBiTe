<link href="${rc.contextPath}/resources/css/bootstrap-datetimepicker.css" rel="stylesheet">
<style>
.form-group .label-detail{text-align:left}
</style>

<div class="row">
	<div class="col-xs-12">
		<p>当前位置：<a href="${rc.contextPath}/chnlCharge/chargeList">增值管理</a> >> 增值记录提交审核</p>
		<hr>
	</div>
	<div class="col-xs-2"></div>
	<div class="col-xs-6">
		<h3>增值记录信息</h3>
		<hr>
		#if($!chargeLog)
		<form class="form-horizontal" action="${rc.contextPath}/chnlCharge/addCharge" method="post">
			<input type="hidden" name="id" value="$!chargeLog.id">
		#else
		<form class="form-horizontal" action="${rc.contextPath}/chnlCharge/addCharge" method="post">
		#end
			<div class="form-group">
				<label class="col-xs-3 control-label label-title">订单号</label>
				<label class="col-xs-9 control-label label-detail">
					#if($!chargeLog)
					<i>$!chargeLog.orderId</i>
					#else
					<i style="color:#999;font-size:12px">(提交后自动生成)</i>
					#end
				</label>
			</div>
			<div class="form-group">
				<label class="col-xs-3 control-label label-title">渠道ID</label>
				<label class="col-xs-9 control-label label-detail">
					<i>$!chnlSysUser.chnlId</i>
				</label>
			</div>
			<div class="form-group">
				<label class="col-xs-3 control-label label-title">增值金额<span style="color:red">*</span></label>
				<div class="col-xs-4">
					<input type="text" class="form-control money-only" name="orderAt" value="$!chargeLog.orderAt">
				</div>
				<label class="col-xs-1 control-label label-right">元</label>
				<label class="col-xs-4 control-label label-tips" id="orderAtTip"></label>
			</div>
			<div class="form-group">
				<label class="col-xs-3 control-label label-title">增值时间<span style="color:red">*</span></label>
				<div class="col-xs-4">
					<input class="form-control tmSelect" type="text" name="txtTime" value="$!chargeLog.txtTime" readonly>
				</div>
				<label class="col-xs-4 control-label label-tips" id="txtTimeTip"></label>
			</div>
			<div class="form-group">
				<div class="col-xs-12" style="text-align:center">
					<button type="submit" class="btn btn-primary" onclick="return checkForm()">提交审核</button>
					<button type="button" class="btn btn-default" onclick="history.go(-1);">返回</button>
				</div>
			</div>
		</form>
	</div>
	<div class="col-xs-2"></div>
</div>


<script src="${rc.contextPath}/resources/js/bootstrap-datetimepicker.js" type="text/javascript"></script>
<script src="${rc.contextPath}/resources/js/bootstrap-datetimepicker.zh-CN.js" type="text/javascript"></script>
<script>
$('.tmSelect').datetimepicker({
	minView:"month",
	format:"yyyy-mm-dd",
	language:'zh-CN',
	endDate:new Date(),
	autoclose:true
});

function checkForm(){
	$('label[id$=Tip]').html('');
	var flag = true;
	$('form input').each(function(){
		if(""==$(this).val()){
			$("#"+$(this).attr('name')+"Tip").html("<span class='icon-remove-sign'></span> 必填");
			flag = false;
		}
	});
	flag = moneyOnly(flag);
	return flag;
}
</script>
